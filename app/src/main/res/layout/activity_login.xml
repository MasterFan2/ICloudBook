<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context="com.masterfan.cloudbook.activity.login.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.masterfan.library.widget.title.MTFTitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleText="登陆"
            app:titleTxtColor="@android:color/white"
            app:titleBackgroundColor="@color/colorPrimary"
            />
        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:src="@mipmap/logo"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_size_25"
            android:layout_marginTop="20dp"
            android:text="登陆"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:background="@drawable/bg_textview_login_two"
                    android:src="@mipmap/img_input_username"
                    android:layout_height="50dp" />
                <EditText
                    android:id="@+id/login_username_edit"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bg_textview_login_one"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="@dimen/text_size_25"
                    android:layout_marginLeft="-2dp"
                    android:hint="姓名/学号"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="#666666"
                    />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:background="@drawable/bg_textview_login_two"
                    android:src="@mipmap/img_input_password"
                    android:layout_height="50dp" />
                <EditText
                    android:id="@+id/login_password_edit"
                    android:paddingLeft="10dp"
                    android:background="@drawable/bg_textview_login_one"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textSize="@dimen/text_size_25"
                    android:layout_marginLeft="-2dp"
                    android:hint="请输入密码"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="#666666"
                    />

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/login_login_btn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25"
            android:background="@drawable/btn_bg_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即登陆"
            />

        <TextView
            android:id="@+id/login_forget_password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/text_size_20"
            android:layout_marginTop="20dp"
            android:text="忘记密码 ？"/>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
