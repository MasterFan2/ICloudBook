<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/book_read_management_start_time_textview"
            android:drawableRight="@mipmap/img_select_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_textview_green_one"
            android:padding="10dp"
            android:text="开始时间" />

        <TextView
            android:id="@+id/book_read_management_end_time_textview"
            android:drawableRight="@mipmap/img_select_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/bg_textview_green_one"
            android:padding="10dp"
            android:text="结束时间" />
    </LinearLayout>
    <Button
        android:id="@+id/book_read_management_find_btn"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"
        />
</LinearLayout>