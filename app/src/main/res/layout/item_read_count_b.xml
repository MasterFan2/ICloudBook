<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_read_comment_booknane_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="书名"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/item_read_comment_writer_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="作者"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/item_read_comment_type_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="类别"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/item_read_comment_read_count_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="阅读次数"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/item_read_comment_b_comment_count_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="评论数"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/item_read_comment_b_collect_count_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="收藏数"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/line"
    />
</LinearLayout>
