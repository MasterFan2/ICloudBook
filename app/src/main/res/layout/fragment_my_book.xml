<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <LinearLayout
        android:background="@drawable/bg_textview_one"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/my_book_my_collect_layout"
            android:background="@drawable/bg_textview_all_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:text="我的收藏"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_book_book_friend_recommend_layout"

            android:layout_width="0dp"
            android:layout_marginLeft="-2dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="书友推荐"

                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_book_my_recommend_layout"
            android:background="@drawable/bg_textview_one"
            android:layout_width="0dp"
            android:layout_marginLeft="-2dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="match_parent"
                android:text="我推荐的"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/comment"/>

</LinearLayout>