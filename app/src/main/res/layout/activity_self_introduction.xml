<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <com.masterfan.library.widget.title.MTFTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleText="自我介绍"
        app:titleTxtColor="@android:color/white"
        app:titleBackgroundColor="@color/colorPrimary"
        />
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/bg_gray_text_view_five"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/self_introduction_content_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:hint="自我介绍"
                android:maxLines="5"
                android:lines="2"
                android:maxLength="200"
                android:textColor="#666666"
                android:background="@null"
                />
                <TextView
                    android:id="@+id/self_introduction_num_textview"
                    android:layout_width="wrap_content"
                    android:text="0/200"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/self_introduction_save_button"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        />
    <com.masterfan.library.widget.probutton.MTFProcessButton
        android:id="@+id/progress_btn"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="click to download."
        app:pb_colorComplete="@color/green"
        app:pb_colorProgress="@color/colorPrimaryDark"
        app:pb_textComplete="下载完成"
        app:pb_textProgress="下载中..."
        />
    <Button
        android:id="@+id/dropdown_btn"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉测试"
        />

</LinearLayout>